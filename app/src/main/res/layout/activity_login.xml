<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BB3030"
    android:orientation="vertical"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="191dp"
        android:layout_height="211dp"
        android:layout_marginStart="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="72dp" />

    <TextView
        android:id="@+id/txUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="40dp"
        android:text="Usuario"
        android:textColor="@color/colorPrimaryText"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/imageLogo" />

    <EditText
        android:id="@+id/editUsuario"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:textColor="@color/colorLightPrimary"
        app:layout_constraintTop_toBottomOf="@+id/txUsuario"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp" />

    <TextView
        android:id="@+id/txContra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="40dp"
        android:text="ContraseÃ±a"
        android:textColor="@color/colorPrimaryText"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/editUsuario" />

    <EditText
        android:id="@+id/editContra"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/edit_round2"
        android:ems="10"
        android:password="true"
        android:textColor="@color/colorLightPrimary"
        app:layout_constraintTop_toBottomOf="@+id/txContra"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp" />

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/custom_buttom"
        android:text="Iniciar Sesion"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="90dp" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="495dp"
        android:background="@drawable/custom_buttomgray"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="90dp" />

</RelativeLayout>